// Comprehensive Type System Test for Kotha
// Tests all data types: purno, doshomik, bornona, sotyo_mittha

main function {
    dekhaw("=== Kotha Type System Test ===");
    dekhaw("");
    
    // ===== INTEGER (purno) =====
    dekhaw("--- Integer (purno) Tests ---");
    purno age = 25;
    purno year = 2025;
    purno sum = age + year;
    
    dekhaw("Age:");
    dekhaw(age);
    dekhaw("Year:");
    dekhaw(year);
    dekhaw("Sum:");
    dekhaw(sum);
    dekhaw("");
    
    // ===== FLOAT (doshomik) =====
    dekhaw("--- Float (doshomik) Tests ---");
    doshomik pi = 3.14159;
    doshomik price = 99.99;
    doshomik tax = 15.5;
    dekhaw("Float variables declared");
    dekhaw("");
    
    // ===== STRING (bornona) =====
    dekhaw("--- String (bornona) Tests ---");
    bornona language = "Kotha";
    bornona country = "Bangladesh";
    bornona greeting = "Assalamu Alaikum";
    dekhaw("String variables declared");
    dekhaw("");
    
    // ===== BOOLEAN (sotyo_mittha) =====
    dekhaw("--- Boolean (sotyo_mittha) Tests ---");
    sotyo_mittha isActive = sotti;
    sotyo_mittha hasError = mittha;
    sotyo_mittha isReady = sotti;
    
    dekhaw("Is Active (should be 1):");
    dekhaw(isActive);
    dekhaw("Has Error (should be 0):");
    dekhaw(hasError);
    dekhaw("Is Ready (should be 1):");
    dekhaw(isReady);
    dekhaw("");
    
    // ===== ARITHMETIC OPERATIONS =====
    dekhaw("--- Arithmetic Tests ---");
    purno a = 10;
    purno b = 5;
    purno addition = a + b;
    purno subtraction = a - b;
    purno multiplication = a * b;
    purno division = a / b;
    
    dekhaw("10 + 5 =");
    dekhaw(addition);
    dekhaw("10 - 5 =");
    dekhaw(subtraction);
    dekhaw("10 * 5 =");
    dekhaw(multiplication);
    dekhaw("10 / 5 =");
    dekhaw(division);
    dekhaw("");
    
    dekhaw("=== All Tests Complete ===");
}
