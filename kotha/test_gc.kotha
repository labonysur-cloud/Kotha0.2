// Test Mark & Sweep Garbage Collector
// This program tests various allocation scenarios

main function {
    // Test 1: Simple allocations
    dekhaw("Test 1: Simple allocations");
    purno x = 10;
    purno y = 20;
    purno z = 30;
    dekhaw(x);
    dekhaw(y);
    dekhaw(z);
    
    // Test 2: String allocations
    dekhaw("Test 2: String allocations");
    dekhaw("Hello from Kotha!");
    dekhaw("Testing GC");
    dekhaw("Mark and Sweep");
    
    // Test 3: Allocations in scope
    dekhaw("Test 3: Scoped allocations");
    jodi (1 == 1) {
        purno a = 100;
        purno b = 200;
        dekhaw(a);
        dekhaw(b);
    }
    // a and b should be collected after this scope
    
    // Test 4: Loop allocations
    dekhaw("Test 4: Loop allocations");
    purno i = 0;
    jotokkhon (i < 5) {
        purno temp = i * 10;
        dekhaw(temp);
        i++;
    }
    
    // Test 5: Multiple strings
    dekhaw("Test 5: Multiple string allocations");
    dekhaw("String 1");
    dekhaw("String 2");
    dekhaw("String 3");
    dekhaw("String 4");
    dekhaw("String 5");
    
    dekhaw("GC Test Complete!");
}
