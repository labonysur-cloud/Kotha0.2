// Simple User Input Test with New Type System

main function {
    dekhaw("=== User Input Test ===");
    
    // Integer input
    dekhaw("Enter your age:");
    purno age;
    nao(age);
    
    dekhaw("You entered:");
    dekhaw(age);
    
    // Calculate next year
    purno nextYear = age + 1;
    dekhaw("Next year you will be:");
    dekhaw(nextYear);
    
    // Calculate in 10 years
    purno future = age + 10;
    dekhaw("In 10 years:");
    dekhaw(future);
    
    dekhaw("Test complete!");
}
